<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".KamusActivity">

    <SearchView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/searchview"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:queryHint="Masukkan Kata"
        android:iconifiedByDefault="false"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/kamustxt"
        android:layout_below="@+id/searchview"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:visibility="gone"
        android:textStyle="bold"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="190dp"
        android:visibility="gone"
        android:id="@+id/listView"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/kamustxt"
        android:layout_alignLeft="@+id/kamustxt"
        android:layout_alignStart="@+id/kamustxt"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/kamustxt2"
        android:layout_below="@+id/listView"
        android:textSize="20sp"
        android:visibility="gone"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView2"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/kamustxt2"
        android:layout_alignLeft="@+id/kamustxt2"
        android:layout_alignStart="@+id/kamustxt2"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:background="@color/darkblue">
        <ImageView
            android:contentDescription="@string/copyright"
            android:layout_width="120dp"
            android:layout_height="23dp"
            android:id="@+id/copyright"
            android:background="@drawable/copyright_image"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"/>
        <!--android:text="@string/copyright"-->
        <!--android:textSize="15sp"-->
        <!--android:textColor="@color/black"-->
        <!--android:textColorLink="@color/black"-->

    </LinearLayout>
</RelativeLayout>